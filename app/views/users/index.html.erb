<% provide(:title, 'Directory') %>
<h1>Mathletes</h1>

<%= will_paginate %>

<ul class="users">
  <div id="parent">
  <% @users.each do |user| %>
  <div>
		<%= link_to(image_tag(user.avatar.url(:small)), user) %>
    <li>
      <%= user.name%>
    </li>
    <li>
      <%= user.email %>
    </li>
    <li>
      <%= "Group: " + user.group %>
    </li>
    <li>
      <%= "Location: " + (user.location || "") %>
    </li>
  </div>
  <% end %>
</div>
</ul>

<%= will_paginate %>